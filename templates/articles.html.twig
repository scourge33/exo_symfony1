
<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('style.css') }}">

    <title>Twig</title>
</head>
<body>
    <header>
        Bonjour
    </header>

    <main>
        <!-- syntaxe "fait quelque chose" -->
        {% for article in articles %}
            <article>
                <!-- syntaxe "affiche quelque chose"
                + lien qui redirige vers l'article correspondant grâce à la fonction path et l'id de l'article -->
                <a href={{ path('articleshow', {'id' : article.id}) }}>
                    <p>{{ article.title }}</p>
                    <p>{{ article.content }}</p>
                </a>

            </article>

        {% endfor %}
    </main>

   <footer>
       Bye bye
   </footer>

</body>
</html>

