{% extends 'base.html.twig' %}

{% block metaTitle %}
    Header
{% endblock metaTitle %}

{% block main %}
        {# syntaxe "fait quelque chose" #}
        {% for article in articles %}
            {% if article.published %}
                {% endif %}
                    <article>
                        {# syntaxe "affiche quelque chose"
                        + lien qui redirige vers l'article correspondant grâce à la fonction path et l'id de l'article -->#}

                        <a href={{ path('articleshow', {'id' : article.id}) }}>
                            <p>{{ article.title }}</p>
                            <p>{{ article.content }}</p>
                        </a>
                    </article>
        {% endfor %}
{% endblock main %}

 {% block footer %}
        <p>Bonsoir</p>
 {% endblock footer %}